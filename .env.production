# Production Environment Configuration
NODE_ENV=production

# API Configuration
VITE_API_URL=https://api.adspro.app
VITE_ENVIRONMENT=production

# Firebase Configuration (Production)
VITE_FIREBASE_API_KEY=your-production-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=adspro.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=adspro-production
VITE_FIREBASE_STORAGE_BUCKET=adspro-production.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-production-sender-id
VITE_FIREBASE_APP_ID=your-production-app-id

# Sentry Configuration (Production)
VITE_SENTRY_DSN=your-production-sentry-dsn
VITE_ENABLE_SENTRY=true
SENTRY_ORG=your-org
SENTRY_PROJECT=adspro-production
SENTRY_AUTH_TOKEN=your-auth-token

# Analytics & Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ANALYTICS=true
VITE_GA_TRACKING_ID=GA-PRODUCTION-ID

# Feature Flags
VITE_ENABLE_DEMO_MODE=false
VITE_ENABLE_DEBUG_PANEL=false
VITE_ENABLE_EXPERIMENTAL_FEATURES=false

# Third-party APIs
VITE_META_ADS_API_URL=https://api.adspro.app/meta
VITE_GOOGLE_ADS_API_URL=https://api.adspro.app/google

# CDN & Assets
VITE_CDN_URL=https://cdn.adspro.app
VITE_ASSETS_URL=https://assets.adspro.app

# Security
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true