// Login Page Component
function LoginPage() {
  const navigate = useNavigate();
  const [email, setEmail] = useState('');
  const [password, setPassword] = useState('');

  const handleLogin = (e: React.FormEvent) => {
    e.preventDefault();
    console.log('Login attempt:', { email, password });
    
    // Simple demo login
    if (email && password) {
      alert(`Welcome ${email}! Redirecting to dashboard...`);
      navigate('/dashboard');
    } else {
      alert('Please enter email and password');
    }
  };

  const demoUsers = [
    { email: 'admin@adspro.com', role: 'Super Admin', color: '#f59e0b' },
    { email: 'maria@agency.gr', role: 'Agency Admin', color: '#3b82f6' },
    { email: 'dimitris@agency.gr', role: 'Moderator', color: '#8b5cf6' },
    { email: 'client@startup.com', role: 'Client', color: '#10b981' }
  ];

  return (
    <div style={{
      minHeight: '100vh',
      background: 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)',
      display: 'flex',
      alignItems: 'center',
      justifyContent: 'center',
      padding: '2rem',
      fontFamily: 'system-ui, sans-serif'
    }}>
      <div style={{
        background: 'rgba(255,255,255,0.95)',
        borderRadius: '20px',
        padding: '3rem',
        width: '100%',
        maxWidth: '900px',
        display: 'grid',
        gridTemplateColumns: '1fr 1fr',
        gap: '3rem',
        boxShadow: '0 25px 50px rgba(0,0,0,0.2)'
      }}>
        {/* Login Form */}
        <div>
          <button
            onClick={() => navigate('/')}
            style={{
              background: 'none',
              border: 'none',
              color: '#667eea',
              cursor: 'pointer',
              marginBottom: '2rem',
              fontSize: '0.9rem'
            }}
          >
            â† Back to Home
          </button>
          
          <h2 style={{ color: '#333', marginBottom: '1rem', fontSize: '2rem' }}>
            Welcome Back! ğŸ‘‹
          </h2>
          <p style={{ color: '#666', marginBottom: '2rem' }}>
            Sign in to your Ads Pro account
          </p>

          <form onSubmit={handleLogin} style={{ display: 'flex', flexDirection: 'column', gap: '1rem' }}>
            <input
              type="email"
              placeholder="Email address"
              value={email}
              onChange={(e) => setEmail(e.target.value)}
              style={{
                padding: '1rem',
                border: '2px solid #e5e7eb',
                borderRadius: '8px',
                fontSize: '1rem'
              }}
            />
            <input
              type="password"
              placeholder="Password"
              value={password}
              onChange={(e) => setPassword(e.target.value)}
              style={{
                padding: '1rem',
                border: '2px solid #e5e7eb',
                borderRadius: '8px',
                fontSize: '1rem'
              }}
            />
            <button
              type="submit"
              style={{
                padding: '1rem',
                background: 'linear-gradient(135deg, #667eea 0%, #764ba2 100%)',
                color: 'white',
                border: 'none',
                borderRadius: '8px',
                fontSize: '1rem',
                fontWeight: 'bold',
                cursor: 'pointer'
              }}
            >
              Sign In
            </button>
          </form>
        </div>

        {/* Demo Users */}
        <div>
          <h3 style={{ color: '#333', marginBottom: '1rem' }}>Demo Users</h3>
          <p style={{ color: '#666', marginBottom: '1.5rem', fontSize: '0.9rem' }}>
            Click any user for quick login
          </p>
          
          <div style={{ display: 'flex', flexDirection: 'column', gap: '1rem' }}>
            {demoUsers.map((user, index) => (
              <button
                key={index}
                onClick={() => {
                  setEmail(user.email);
                  setPassword('demo123');
                }}
                style={{
                  padding: '1rem',
                  background: '#f9fafb',
                  border: `2px solid ${user.color}20`,
                  borderRadius: '8px',
                  cursor: 'pointer',
                  textAlign: 'left',
                  transition: 'all 0.2s'
                }}
                onMouseOver={(e) => {
                  e.currentTarget.style.background = `${user.color}10`;
                }}
                onMouseOut={(e) => {
                  e.currentTarget.style.background = '#f9fafb';
                }}
              >
                <div style={{ display: 'flex', justifyContent: 'space-between', alignItems: 'center' }}>
                  <div>
                    <div style={{ fontWeight: 'bold', color: '#333' }}>{user.email}</div>
                    <div style={{ fontSize: '0.8rem', color: '#666' }}>{user.role}</div>
                  </div>
                  <div style={{
                    width: '12px',
                    height: '12px',
                    borderRadius: '50%',
                    background: user.color
                  }}></div>
                </div>
              </button>
            ))}
          </div>
        </div>
      </div>
    </div>
  );
}

